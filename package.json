{
  "name": "extme",
  "version": "1.0.1",
  "description": "",
  "main": "build/server.js",
  "scripts": {
    "dev": "NODE_ENV=development nodemon server.ts",
    "winDev": "set \"NODE_ENV=development\" && nodemon server.ts ",
    "build": "rimraf ./build && tsc --project ./",
    "start": "NODE_ENV=production npm run build && node build/server.js",
    "test": "NODE_ENV=testing mocha --check-leaks -r ts-node/register \"test/**/*.spec.ts\"",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "commit": "cz",
    "format": "prettier --write .",
    "release": "standard-version",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sunanda35/extme.git"
  },
  "keywords": [
    "extract",
    "extme",
    "ext-me"
  ],
  "author": "Sunanda Samanta",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sunanda35/extme/issues"
  },
  "homepage": "https://github.com/sunanda35/extme#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^15.0.0",
    "express": "^4.17.2",
    "helmet": "^5.0.2",
    "hpp": "^0.2.3",
    "http-errors": "^2.0.0",
    "lodash": "^4.17.21",
    "mongodb": "^4.3.1",
    "morgan": "^1.10.0",
    "toobusy-js": "^0.5.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/hpp": "^0.2.2",
    "@types/http-errors": "^1.8.2",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.14",
    "@types/toobusy-js": "^0.5.2",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "commitizen": "^3.0.0",
    "concurrently": "^7.0.0",
    "husky": "^7.0.4",
    "mocha": "^9.2.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.2",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.3",
    "typescript": "^4.5.5"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": false,
    "printWidth": 100,
    "proseWrap": "preserve",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false,
    "vueIndentScriptAndStyle": false,
    "rangeStart": 0
  },
  "husky": {
    "hooks": {
      "pre-commit": "prettier --write ."
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}